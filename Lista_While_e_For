para se guiar sobre as faixas etárias:

// questao 9

idade=0; a=0;cont=0; cont2=0; cont3=0; cont4=0; cont5=0;

var idade=prompt("digite a idade");

while(idade<0){ 

 a++

 var idade=prompt("digite a idade");

if(idade>0 <5){

cont++

document.write("idade de menor de 5 anos : "+cont );

}else{}

if(idade>6 <13){

cont2++

document.write("idade de maior de 6 e menor de 13 anos : "+cont2 );

}else{}

if(idade>14 <17){

cont3++



}else{}
if(idade>18 <59){
cont4++
document.write("idade de maior de 18 e menor de 59 anos : "+cont4 );
}else{}
if(idade>60){
cont5++
document.write("idade de maior de 60 anos : "+cont5 );
}else{}
