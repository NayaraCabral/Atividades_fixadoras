id=prompt("digite idade");

if(op==1){

 cont1++

 document.write("pessoas que acharam regular :"+cont1);

}if(op==2){

 cont2++

 document.write("pessoas que acharam bom :"+cont2);

 var media= (media+id)/cont2;

 document.write("media de pessoaas que acharam boom :"+cont2);

var porcen=(media/100)*cont2;

document.write("% de pessoaas que acharam bom :"+porcen);

}if(op==3){

 cont3++

 document.write("pessoas que acharam otimo :"+cont3);

 var media= (media+id)/cont3;

